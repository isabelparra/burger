<div class="container">
  <div class='row'>
    <div class="col-xs-12 text-center" id='header'>
      <h2>Eat-Da-Burger!</h2>
      <img src="/images/burger.png">
    </div>

    <div class="col-xs-6 text-center" id="burgers">
      <div class="row">
        {{#each burger_data}}
          {{#unless this.devoured}}
      <div class="col-xs-9 text-center">
        <pre>{{this.id}}. {{this.burger_name}}</pre>
      </div>

      <div class="col-xs-3 text-center">
        <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
          <input type= "hidden" name="burger_id" type="text" value={{this.id}}>
          <br>
          <button type="submit" class="btn btn-default">Devour it!</button>
        </form>
      </div>
      {{/unless}}
      {{/each}}
</div>
</div>

  <div class="col-xs-6 text-center" class="burgers">
    {{#each burger_data}}
      {{#if this.devoured}}
        <input class="form-control" type="text" placeholder="{{this.id}}.{{this.burger_name}}" readonly>
        {{/if}}
        {{/each}}
  </div> 
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_section">
    <form action="/burgers/create" method="POST">
      <input type="text" class="form-control" id="enter_burger" name="burger_name" value="">
      <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
  </form>
  <h4>Enter a burger you want to eat and press submit.</h4>
  </div>
  </div>
  </div>